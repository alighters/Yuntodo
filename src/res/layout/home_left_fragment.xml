<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_color"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="David" />

            <com.oldwei.yifavor.custom.CustomListView
                android:id="@+id/home_link_category_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:listSelector="@android:color/transparent" >
            </com.oldwei.yifavor.custom.CustomListView>

            <EditText
                android:id="@+id/home_left_add_category_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:hint="@string/add_category_text_hint"
                android:visibility="gone" />

            <Button
                android:id="@+id/home_link_category_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/add_category_btn_name" />

            <RelativeLayout
                android:id="@+id/home_left_category_add_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:visibility="gone" >

                <Button
                    android:id="@+id/home_link_category_add_cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/add_category_btn_cancel_name" />

                <Button
                    android:id="@+id/home_link_category_add_ok_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="@string/add_category_btn_ok_name" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>